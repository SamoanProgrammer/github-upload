<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeApp.View.REST"
             xmlns:local="clr-namespace:PracticeApp.ViewModel">

    <ContentPage.BindingContext>
        <local:RESTViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Connect to REST API" />
            <Label Text="{Binding Response}" />
            <Button Text="Connect" Command="{Binding ConnectCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>